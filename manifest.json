{
  "manifest_version": 3,
  "name": "Auto Scroll",
  "version": "1.0",
  "description": "Automatically scrolls to the bottom of the page",
  "permissions": ["activeTab"],
  "action": {
    "default_title": "Auto Scroll"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
